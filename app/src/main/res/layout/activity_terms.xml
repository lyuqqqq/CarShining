<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".TermsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:background="#90CAF9"
            android:elevation="4dp"
            app:titleTextColor="@android:color/white"
            app:navigationIconTint="@android:color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:id="@+id/layoutTerms"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="16dp"
            android:paddingBottom="24dp"
            app:layout_constraintTop_toBottomOf="@id/topAppBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/section1Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User Agreement"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/section1Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                android:text="By creating an account and using the Car Shining app, you agree to follow these Terms &amp; Conditions and all rules shown in the app. You are responsible for the accuracy of your personal information and for keeping your login details safe. We may suspend or terminate your account if we detect misuse, fraud or violation of these terms."
                android:textSize="14sp"
                android:textColor="#444444"
                android:lineSpacingExtra="4dp"
                android:justificationMode="inter_word" />

            <TextView
                android:id="@+id/section2Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Service Terms"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/section2Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                android:text="Car Shining provides home car cleaning and care at the address, date and time you select in the app. We will make reasonable efforts to arrive on time, but delays may occur due to traffic, weather or other factors beyond our control. You are responsible for making sure your car is accessible and the location is safe for our staff to work."
                android:textSize="14sp"
                android:textColor="#444444"
                android:lineSpacingExtra="4dp"
                android:justificationMode="inter_word" />

            <TextView
                android:id="@+id/section3Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Privacy Policy"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/section3Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                android:text="We collect basic personal data such as your name, phone number, email, addresses and car details to manage bookings and improve our services. Your information is stored securely and is not sold to third parties. We may share limited data only with trusted partners when necessary to process payments, send notifications or support the app’s operation."
                android:textSize="14sp"
                android:textColor="#444444"
                android:lineSpacingExtra="4dp"
                android:justificationMode="inter_word" />

            <TextView
                android:id="@+id/section4Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Payment and Refund Policy"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/section4Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                android:text="All payments are handled through the Car Shining wallet, and your wallet balance can be used only for services inside the app. When a booking is confirmed, the service fee is automatically deducted from your wallet. Refunds, if granted, are usually made as wallet credits and are only considered for cases like service cancellation from our side or serious quality issues, not for simple change of mind."
                android:textSize="14sp"
                android:textColor="#444444"
                android:lineSpacingExtra="4dp"
                android:justificationMode="inter_word" />

            <TextView
                android:id="@+id/section5Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Disclaimer"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/section5Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                android:text="Car Shining aims to deliver high-quality results, but we cannot guarantee that all stains, scratches or defects on your car will be fully removed. Service outcomes depend on the car’s condition and working environment. To the maximum extent allowed by law, we are not responsible for indirect losses, delays beyond our control, or pre-existing damage to your vehicle."
                android:textSize="14sp"
                android:textColor="#444444"
                android:lineSpacingExtra="4dp"
                android:justificationMode="inter_word" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
