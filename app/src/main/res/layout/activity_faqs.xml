<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".FaqsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:background="#90CAF9"
            android:elevation="4dp"
            app:titleTextColor="@android:color/white"
            app:navigationIconTint="@android:color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:id="@+id/layoutFaqs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="16dp"
            android:paddingBottom="24dp"
            app:layout_constraintTop_toBottomOf="@id/topAppBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/question1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. How do I book a Car Shining service?"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp"
                android:justificationMode="inter_word"/>

            <TextView
                android:id="@+id/answer1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                android:text="Go to the 'Home' or 'Service' tab, select the service you need, choose your preferred date, time and address, ensure you have enough balance in your wallet, and then click 'Pay Now' to confirm your booking."
                android:textSize="14sp"
                android:textColor="#444444"
                android:lineSpacingExtra="4dp"
                android:justificationMode="inter_word" />

            <TextView
                android:id="@+id/question2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. How does the wallet balance work?"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp"
                android:justificationMode="inter_word"/>

            <TextView
                android:id="@+id/answer2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                android:text="Your wallet is a prepaid balance that can be used only for Car Shining services. You can top up your wallet from the Wallet screen, and each successful booking will automatically deduct the service price from your balance."
                android:textSize="14sp"
                android:textColor="#444444"
                android:lineSpacingExtra="4dp"
                android:justificationMode="inter_word" />

            <TextView
                android:id="@+id/question3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. What happens if my wallet balance is not enough?"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp"
                android:justificationMode="inter_word"/>

            <TextView
                android:id="@+id/answer3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                android:text="If your wallet balance is lower than the service price, you will not be able to successfully book the service. You can click 'Add Money to Wallet' to go to the wallet page, top up, and then return to complete the booking."
                android:textSize="14sp"
                android:textColor="#444444"
                android:lineSpacingExtra="4dp"
                android:justificationMode="inter_word" />

            <TextView
                android:id="@+id/question4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. Can I save my address and car details?"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp"
                android:justificationMode="inter_word"/>

            <TextView
                android:id="@+id/answer4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                android:text="Yes. You can manage your frequently used addresses in the 'Address' screen and manage your license plate number, car type, and color in the 'Car Management' screen under the 'Profile' tab for faster booking next time."
                android:textSize="14sp"
                android:textColor="#444444"
                android:lineSpacingExtra="4dp"
                android:justificationMode="inter_word" />

            <TextView
                android:id="@+id/question5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5. How can I change my name, phone number or email?"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp"
                android:justificationMode="inter_word"/>

            <TextView
                android:id="@+id/answer5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                android:text="Go to the 'Profile' tab and tap 'My Profile'. On the 'Edit Profile' screen you can update your name, phone number and email. After saving, your new information will be shown on the Profile page."
                android:textSize="14sp"
                android:textColor="#444444"
                android:lineSpacingExtra="4dp"
                android:justificationMode="inter_word" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
