<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white"
    tools:context=".CustomerServiceActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:background="#90CAF9"
            app:titleTextColor="@android:color/white"
            app:navigationIconTint="@android:color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <RelativeLayout
            android:id="@+id/layoutOnlineContainer"
            android:layout_width="0dp"
            android:layout_height="340dp"
            android:background="@drawable/bg_customer_header"
            app:layout_constraintTop_toBottomOf="@id/topAppBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:id="@+id/layoutOnlineSupport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/imageOnlineSupport"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/ic_online_support"
                    android:contentDescription="Online support" />

                <TextView
                    android:id="@+id/textOnlineSupportTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Help &amp; Support"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="12dp" />

                <TextView
                    android:id="@+id/textOnlineSupportDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Talk to our team for assistance"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="6dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonStartOnlineChat"
                    android:layout_width="200dp"
                    android:layout_height="44dp"
                    android:text="Contact Us"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1080E7"
                    android:layout_marginTop="16dp"
                    app:cornerRadius="22dp"
                    app:backgroundTint="@android:color/white" />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layoutPhoneSupport"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="40dp"
            android:paddingBottom="40dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            app:layout_constraintTop_toBottomOf="@id/layoutOnlineContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/imagePhoneSupport"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_phone_support"
                android:contentDescription="Phone support" />

            <TextView
                android:id="@+id/textPhoneTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Service Hotline"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#1080E7"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/textPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+60 12-345 6789"
                android:textSize="24sp"
                android:textColor="#1080E7"
                android:layout_marginTop="4dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonCallSupport"
                android:layout_width="220dp"
                android:layout_height="48dp"
                android:text="Call Customer Service"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginTop="24dp"
                app:cornerRadius="24dp"
                app:backgroundTint="#42ABF4" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
