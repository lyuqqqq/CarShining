<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bookingScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="0dp"
    android:paddingEnd="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="16dp"
    android:fillViewport="true"
    tools:context=".Booking">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayoutBooking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabIndicatorColor="#2196F3"
            app:tabIndicatorHeight="3dp"
            app:tabSelectedTextColor="@android:color/black"
            app:tabTextColor="#808080"
            app:tabIndicatorFullWidth="true"
            app:tabTextAppearance="@style/BookingTabText">

        <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completed" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Incomplete" />
        </com.google.android.material.tabs.TabLayout>

        <LinearLayout
            android:id="@+id/layoutIncompleteSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutCompletedSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="96dp"
                android:layout_marginBottom="6dp"
                app:cardCornerRadius="12dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingTop="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="16dp">

                    <ImageView
                        android:id="@+id/imageServiceCompleted1"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/max_discont_cleaning"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textServiceNameCompleted1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Discount Cleaning"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="@android:color/black"
                            android:lineSpacingExtra="2dp" />

                        <TextView
                            android:id="@+id/textDateTimeCompleted1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thu, 23 Oct 路 4:00 PM"
                            android:textSize="14sp"
                            android:textColor="#606060"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textPriceCompleted1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RM39"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:layout_marginStart="12dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="96dp"
                android:layout_marginBottom="6dp"
                app:cardCornerRadius="12dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingTop="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="16dp">

                    <ImageView
                        android:id="@+id/imageServiceCompleted2"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/max_car_waxing"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textServiceNameCompleted2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Car Waxing"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="@android:color/black"
                            android:lineSpacingExtra="2dp" />

                        <TextView
                            android:id="@+id/textDateTimeCompleted2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mon, 4 Aug 路 2:15 PM"
                            android:textSize="14sp"
                            android:textColor="#606060"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textPriceCompleted2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RM49"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:layout_marginStart="12dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="96dp"
                android:layout_marginBottom="6dp"
                app:cardCornerRadius="12dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingTop="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="16dp">

                    <ImageView
                        android:id="@+id/imageServiceCompleted3"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/max_premium_cleaning"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textServiceNameCompleted3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Premium Cleaning"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="@android:color/black"
                            android:lineSpacingExtra="2dp" />

                        <TextView
                            android:id="@+id/textDateTimeCompleted3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wed, 11 Jun 路 3:30 PM"
                            android:textSize="14sp"
                            android:textColor="#606060"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textPriceCompleted3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RM89"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:layout_marginStart="12dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="96dp"
                android:layout_marginBottom="6dp"
                app:cardCornerRadius="12dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingTop="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="16dp">

                    <ImageView
                        android:id="@+id/imageServiceCompleted4"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/max_car_disinfection"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textServiceNameCompleted4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Car Disinfection"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="@android:color/black"
                            android:lineSpacingExtra="2dp" />

                        <TextView
                            android:id="@+id/textDateTimeCompleted4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tue, 6 May 路 5:10 PM"
                            android:textSize="14sp"
                            android:textColor="#606060"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textPriceCompleted4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RM29"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:layout_marginStart="20dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
